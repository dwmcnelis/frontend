{{! app/templates/leads/detail-ribbon.hbs }}
{{!-- {{#zz-button-bar}}
	{{#zz-button-group}}
		{{#link-to 'leads' classNames='btn btn-default btn-sm' activeClass=""}}<i class="glyphicon glyphicon-arrow-left"></i>{{/link-to}}
	{{/zz-button-group}}  
