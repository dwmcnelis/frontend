{{! app/templates/team/details.hbs }}
<div>  
  <h1>{{name}}</h1>

  {{#zz-form model=model}}
    {{! #if errors}}
      {{! zz-alert kind='danger' label='Invalid Username/Password'}}
    {{! /if}}
    <div class="form-group has-feedback">                    
      <label class="control-label" style="margin-right: 6px">Level</label>
      {{zz-select
        value=level
        optionValuePath="id"
        content=levelNames
        searchEnabled=false
        placeholder="Level"
      }}
      <span class="form-control-feedback"><i></i></span>
    </div>
    <div class="form-group has-feedback">                    
      <label class="control-label" style="margin-right: 6px">Type</label>
      {{zz-select
        value=kind
        optionValuePath="id"
        content=kindNames
        searchEnabled=false
        placeholder="Level"
      }}
      <span class="form-control-feedback"><i></i></span>
    </div>

    {{zz-input property="name" label="Name" placeholder="Name"}}
    {{zz-input property="location" label="Location" placeholder="Location"}}
    {{zz-input property="arena" label="Arena" placeholder="Arena"}}

    {{zz-button enabled=needsSaving action='save' kind='primary' label='Save' icon='glyphicon glyphicon-save' label-pending='Saving' icon-pending='fa fa-spinner fa-spin'}}
    {{zz-button action='cancel' label='Cancel' classNames='button'}}
  {{/zz-form}}
</div>
